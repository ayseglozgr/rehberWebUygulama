@model rehberWebUygulama.Models.PersonModel.PersonUpdateViewModel
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Kişi Güncelle</h2>

<form class="form-horizontal" method="post" action=" /Person/Update/">
    @Html.HiddenFor(x=>x.Person.Id)
    <div class=" form-group">
        @Html.LabelFor(x => x.Person.name)
        @Html.TextBoxFor(x => x.Person.name, null, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Person.surname)
        @Html.TextBoxFor(x => x.Person.surname, null, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Person.homePhone)
        @Html.TextBoxFor(x => x.Person.homePhone, null, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Person.mobilePhone)
        @Html.TextBoxFor(x => x.Person.mobilePhone, null, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Person.officePhone)
        @Html.TextBoxFor(x => x.Person.officePhone, null, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Person.emailaddress)
        @Html.TextBoxFor(x => x.Person.emailaddress, null, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Person.address)
        @Html.TextBoxFor(x => x.Person.address, null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Person.cityId)
        @*@Html.DropDownListFor(x => x.Person.cityId, new SelectList(ViewBag.Cities, "Value", "Text"), new { @class = "form-control" })*@
        @Html.DropDownListFor(x => x.Person.cityId, new SelectList(ViewBag.Cities, "Value", "Text"), new { @class = "form-control" })

    </div>
    <input type="submit" class="btn btn-primary" value="Güncelle" />
</form>