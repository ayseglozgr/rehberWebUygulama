@model rehberWebUygulama.Models.PersonModel.PersonAddViewModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>
@using (Html.BeginForm("Add", "Person", FormMethod.Post))
{
    <div class=" form-group">
        @Html.LabelFor(x => x.Persons.name)
        @Html.TextBoxFor(x => x.Persons.name, null, new { @class = "form-control" })
    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Persons.surname)
        @Html.TextBoxFor(x => x.Persons.surname, null, new { @class = "form-control" })

    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Persons.homePhone)
        @Html.TextBoxFor(x => x.Persons.homePhone, null, new { @class = "form-control" })

    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Persons.mobilePhone)

        @Html.TextBoxFor(x => x.Persons.mobilePhone, null, new { @class = "form-control" })


    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Persons.officePhone)

        @Html.TextBoxFor(x => x.Persons.officePhone, null, new { @class = "form-control" })

    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Persons.emailaddress)
        @Html.TextBoxFor(x => x.Persons.emailaddress, null, new { @class = "form-control" })

    </div>
    <div class=" form-group">
        @Html.LabelFor(x => x.Persons.address)
        @Html.TextBoxFor(x => x.Persons.address, null, new { @class = "form-control" })


    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Persons.cityId)

        @Html.DropDownListFor(x => x.Persons.cityId, new SelectList(ViewBag.Cities, "Value", "Text"), new { @class = "form-control" })

    </div>
    <input type="submit" class="btn btn-primary" value="Kaydet" />

}

